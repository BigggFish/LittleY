<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddSpendFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_selected_bill_type"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/icon_zhichu_type_canyin" />

                <TextView
                    android:id="@+id/tv_selected_bill_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="餐饮"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_spend_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="￥0"
                    android:lines="1"
                    android:inputType="number"
                    android:paddingBottom="16dp"
                    android:paddingRight="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="16dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <GridView
                android:id="@+id/gv_spend_type"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:numColumns="5" />

            <EditText
                android:id="@+id/et_spend_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="备注" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_animation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />
    </FrameLayout>

</android.support.v4.widget.NestedScrollView>





