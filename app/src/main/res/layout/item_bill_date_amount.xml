<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <LinearLayout
        android:id="@+id/ll_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <View
            android:layout_width="0.5dp"
            android:layout_height="27dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_line" />

        <ImageView
            android:id="@+id/iv_gray_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/image_gray_dot" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="27dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_line" />

    </LinearLayout>
<!--    <ImageView
        android:id="@+id/iv_gray_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_centerInParent="true"
        android:src="@drawable/image_gray_dot" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="32dp"
        android:layout_above="@id/iv_gray_dot"
        android:layout_centerHorizontal="true"
        android:background="@color/Orange" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="32dp"
        android:layout_below="@id/iv_gray_dot"
        android:layout_centerHorizontal="true"
        android:background="@color/Orange" />-->

    <TextView
        android:id="@+id/tv_bill_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/ll_detail_type"
        android:text="7月21日"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_bill_detail_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/ll_detail_type"
        android:text="￥888"
        android:textSize="12sp"/>
</RelativeLayout>