<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bigggfish.littley.activity.MainActivity">

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="6dp">

        <RadioButton
            android:id="@+id/rb_detail"
            style="@style/MainRadioButtonTheme"
            android:drawableTop="@drawable/sel_rb_detail"
            android:text="流水" />

        <RadioButton
            android:id="@+id/rb_add"
            style="@style/MainRadioButtonTheme"
            android:drawableTop="@drawable/sel_rb_add"
            android:text="添加"/>

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/MainRadioButtonTheme"
            android:drawableTop="@drawable/sel_rb_mine"
            android:text="我的" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rg_main" />

</RelativeLayout>
